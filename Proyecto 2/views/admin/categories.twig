{% extends 'layout.twig' %}

{% block body %}
<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand mx-3" href="/admin/dashboard">We Care</a>
  <div class="collapse navbar-collapse justify-content-end">
    <ul class="navbar-nav mx-3">
      <li class="nav-item"><a class="nav-link" href="/auth/logout">Logout</a></li>
    </ul>
  </div>
</nav>

<!-- TÃ­tulo Principal -->
<div class="jumbotron text-center bg-primary text-white">
  <h1>Welcome to We Care Admin!</h1>
</div>

<div class="container">
  <h1>Manage Categories</h1>
  <a href="/admin/categories/create" class="btn btn-primary mb-3">Create New Category</a>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for category in categories %}
      <tr>
        <td>{{ category.name }}</td>
        <td>
          <a href="/admin/categories/{{ category.id }}/edit" class="btn btn-warning btn-sm">Edit</a>
          <form action="/admin/categories/{{ category.id }}/delete" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this category?')">Delete</button>
          </form>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
