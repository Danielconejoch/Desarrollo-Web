{% extends 'layout.twig' %}

{% block body %}
  <h1>{{ title }}</h1>
  <form method="POST">
    <div class="form-group">
      <label for="nombre">Nombre:</label>
      <input id="nombre" name="nombre" type="text" value="{{ address.nombre }}" required>
    </div>
    
    <div class="form-group">
      <label for="apellidos">Apellidos:</label>
      <input id="apellidos" name="apellidos" type="text" value="{{ address.apellidos }}" required>
    </div>
    
    <div class="form-group">
      <label for="telefonoCasa">Teléfono de la Casa:</label>
      <input id="telefonoCasa" name="telefonoCasa" type="text" value="{{ address.telefonoCasa }}">
    </div>
    
    <div class="form-group">
      <label for="direccionCasa">Dirección de la Casa:</label>
      <input id="direccionCasa" name="direccionCasa" type="text" value="{{ address.direccionCasa }}">
    </div>
    
    <div class="form-group">
      <label for="telefonoTrabajo">Teléfono del Trabajo:</label>
      <input id="telefonoTrabajo" name="telefonoTrabajo" type="text" value="{{ address.telefonoTrabajo }}">
    </div>
    
    <div class="form-group">
      <label for="direccionTrabajo">Dirección del Trabajo:</label>
      <input id="direccionTrabajo" name="direccionTrabajo" type="text" value="{{ address.direccionTrabajo }}">
    </div>
    
    <div class="form-group-full">
      <label for="correoElectronico">Correo Electrónico:</label>
      <input id="correoElectronico" name="correoElectronico" type="email" value="{{ address.correoElectronico }}" required>
    </div>
    
    <div class="form-group-full">
      <button type="submit">Actualizar</button>
    </div>
  </form>
{% endblock %}
